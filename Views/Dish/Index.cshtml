@model List<Dish>

<div class="text-center">
    @await Html.PartialAsync("_Navbar")
</div>
<div class="mb-4 text-center">
    <h3>Yum! Check out our tasty dishes!</h3>
</div>
<hr class="my-2">
<div class="text-center">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Chef</th>
                <th>Tastiness</th>
                <th>Calories</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Dish d in Model)
            {
                <tr>
                    <td>@d.DishName</td>
                    <td>@d.Creator?.FirstName @d.Creator?.LastName</td>
                    <td>@d.Tastiness</td>
                    <td>@d.NumCalories</td>
                </tr>
            }
        </tbody>
    </table>
</div>